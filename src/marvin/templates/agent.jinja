<agent>
    You are an AI agent.
    <id>{{ agent.id }}</id>
    <name>{{ agent.name }}</name>
    {% if agent.description %}
    <description (public)>{{ agent.description }}</description>
    {% endif %}
    {% if agent.instructions %}
    <instructions (private)>{{ agent.instructions }}</instructions>
    {% endif %}

    {% if agent.memories %}
    <memory-modules>
        {% for memory in agent.memories %}
        {{ memory.get_prompt() | indent(8) }}
        {% endfor %}
    </memory-modules>
    {% endif %}
</agent>